<?xml version="1.0" encoding="UTF-8"?>
<tt 
 xmlns="http://www.w3.org/ns/ttml" xmlns:ttp="http://www.w3.org/ns/ttml#parameter"  xmlns:ebuttm="urn:ebu:tt:metadata"
 xmlns:tts="http://www.w3.org/ns/ttml#styling" ttp:timeBase="media" xml:lang="en"> 
     <head>
       <metadata>
           <ebuttm:documentMetadata>
               <ebuttm:conformsToStandard>urn:ebu:tt:distribution:2014-01</ebuttm:conformsToStandard>
               <ebuttm:conformsToStandard>http://www.w3.org/ns/ttml/profile/imsc1/text</ebuttm:conformsToStandard>
           </ebuttm:documentMetadata>
       </metadata>

        <styling>
            <style xml:id="s1" tts:color="#FFFFFF" tts:backgroundColor="#000000"/>
            <style xml:id="s2" tts:color="#FFFFFF" tts:backgroundColor="#000000" tts:fontSize="100%"/>
        </styling>
        <layout>
            <region xml:id="r1" tts:origin="10% 50%" tts:extent="80% 15%"/>
            <region xml:id="r2" tts:origin="10% 75%" tts:extent="80% 15%"/>
        </layout>
    </head>
<body>
    <div>
        <p xml:id="p1" begin="00:00:00.000" end="00:00:10.000" region="r1">
            <span style="s1">
                SUB1050 - fontSize is not set.
            </span>
        </p>
        <p xml:id="p2" begin="00:00:00.000" end="00:00:10.000" region="r2">
            <span style="s2">
                SUB1050 - fontSize = 100%.
            </span>
        </p>
    </div>
</body>
</tt>