           </ebuttm:documentMetadata>
       </metadata>

        <styling>
            <style xml:id="text" tts:color="#FFFFFF"/>
            <style xml:id="paragraphStyle" tts:fontSize="70%" tts:backgroundColor="#000000"/>
        </styling>
        <layout>
            <region xml:id="r1" tts:origin="30% 15%" tts:extent="20% 75%" tts:writingMode="tblr"/>
        </layout>
    </head>
    <body>
        <div>
            <p xml:id="subtitle1" region="r1" begin="00:00:00.000" end="00:00:10.000" style="paragraphStyle">
                <span style="text">First Line.</span>
            </p>
            <p xml:id="subtitle2" region="r1" begin="00:00:00.000" end="00:00:10.000" style="paragraphStyle">
