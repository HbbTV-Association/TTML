<?xml version="1.0" encoding="UTF-8"?>
<tt xmlns="http://www.w3.org/ns/ttml"
    xmlns:ebuttm="urn:ebu:tt:metadata"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
     xmlns:tts="http://www.w3.org/ns/ttml#styling" ttp:timeBase="media" xml:lang="en">
    <head>
       <metadata>
           <ebuttm:documentMetadata>
               <ebuttm:conformsToStandard>urn:ebu:tt:distribution:2014-01</ebuttm:conformsToStandard>
               <ebuttm:conformsToStandard>http://www.w3.org/ns/ttml/profile/imsc1/text</ebuttm:conformsToStandard>
           </ebuttm:documentMetadata>
       </metadata>
    
        <styling>        
            <style xml:id="paragraphStyle" tts:textAlign="center" tts:color="#ffffff" tts:backgroundColor="#ff0000" tts:fontSize="100%"/>
            <style xml:id="regionStyle" tts:backgroundColor="#00000050"/>
        </styling>
        <layout>
            <region xml:id="top" tts:origin="10% 40%" tts:extent="80% 20%" tts:padding="20%" tts:displayAlign="before" style="regionStyle"/>
            <region xml:id="bottom" tts:origin="10% 70%" tts:extent="80% 20%" tts:padding="20%" tts:displayAlign="after" style="regionStyle"/>
        </layout>
    </head>
    <body>
        <div>
            <p xml:id="subtitle1" region="top" begin="00:00:00.000" end="00:00:10.000" style="paragraphStyle">
                <span>Region padding, one value.</span>
            </p>        
            <p xml:id="subtitle2" region="bottom" begin="00:00:00.000" end="00:00:10.000" style="paragraphStyle">
                <span>Region padding, one value.</span>
            </p>        
        </div>
    </body>
</tt>
