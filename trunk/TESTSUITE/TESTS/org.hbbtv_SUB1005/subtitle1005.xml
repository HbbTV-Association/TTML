<?xml version="1.0" encoding="UTF-8"?>
<tt
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:ebuttm="urn:ebu:tt:metadata"
    xmlns:tts="http://www.w3.org/ns/ttml#styling" ttp:timeBase="media" xml:lang="en">
    <head>
       <metadata>
           <ebuttm:documentMetadata>
               <ebuttm:conformsToStandard>urn:ebu:tt:distribution:2014-01</ebuttm:conformsToStandard>
               <ebuttm:conformsToStandard>http://www.w3.org/ns/ttml/profile/imsc1/text</ebuttm:conformsToStandard>
           </ebuttm:documentMetadata>
       </metadata>

        <styling>
            <style xml:id="s1" tts:fontSize="100%" tts:color="#FFFFFF" tts:backgroundColor="#000000"/>
            <style xml:id="s2" tts:fontSize="200%" tts:color="#FFFFFF" tts:backgroundColor="#000000"/>
        </styling>
        <layout>
            <region xml:id="top" tts:origin="10% 45%" tts:extent="80% 15%"/>
            <region xml:id="bottom" tts:origin="10% 70%" tts:extent="80% 20%"/>
        </layout>
    </head>
    <body>
        <div>
            <p style="s1" begin="00:00:00.000" xml:id="p1" end="00:00:10.000" region="top" >
                Subtitle 100% size.
            </p>
        </div>
        <div>
            <p style="s2" begin="00:00:00.000" xml:id="p2" end="00:00:10.000" region="bottom">
                200% size.
            </p>
        </div>
    </body>
</tt>