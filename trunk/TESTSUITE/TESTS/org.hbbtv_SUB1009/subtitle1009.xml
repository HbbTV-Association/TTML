<?xml version="1.0" encoding="UTF-8"?>
<tt
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:ebuttm="urn:ebu:tt:metadata"
    xmlns:tts="http://www.w3.org/ns/ttml#styling" ttp:timeBase="media" xml:lang="en">
    <head>
       <metadata>
           <ebuttm:documentMetadata>
               <ebuttm:conformsToStandard>urn:ebu:tt:distribution:2014-01</ebuttm:conformsToStandard>
               <ebuttm:conformsToStandard>http://www.w3.org/ns/ttml/profile/imsc1/text</ebuttm:conformsToStandard>
           </ebuttm:documentMetadata>
       </metadata>

        <styling>
            <style xml:id="spanRedStyle" tts:color="#FF0000"/>
            <style xml:id="spanGreenStyle" tts:color="#00FF00"/>
            <style xml:id="paragraphStyle" tts:backgroundColor="#000000" tts:fontSize="100%" tts:color="#FFFFFF"/>
        </styling>
        <layout>
            <region xml:id="bottom" tts:origin="10% 60%" tts:extent="80% 30%"/>
        </layout>
    </head>
    <body>
        <div>
            <p begin="00:00:00.000" xml:id="p1" end="00:00:10.000" style="paragraphStyle" region="bottom">            
                Word <span style="spanRedStyle">'red'</span> must be in red color.        
            </p>
            <p begin="00:00:00.000" xml:id="p2" end="00:00:10.000" style="paragraphStyle" region="bottom">            
                and word <span style="spanGreenStyle">'green'</span> in green color.
            </p>
        </div>
    </body>
</tt>