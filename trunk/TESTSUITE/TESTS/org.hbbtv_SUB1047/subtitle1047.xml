<?xml version="1.0" encoding="UTF-8"?>
<tt
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:ebuttm="urn:ebu:tt:metadata"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ebutts="urn:ebu:tt:style"
    ttp:timeBase="media" xml:lang="en">
    <head>
       <metadata>
           <ebuttm:documentMetadata>
               <ebuttm:conformsToStandard>urn:ebu:tt:distribution:2014-01</ebuttm:conformsToStandard>
               <ebuttm:conformsToStandard>http://www.w3.org/ns/ttml/profile/imsc1/text</ebuttm:conformsToStandard>
           </ebuttm:documentMetadata>
       </metadata>
        <styling>
            <style xml:id="black" tts:fontSize="100%" tts:fontFamily="monospace" tts:color="#FFFFFF" tts:backgroundColor="#000000" ebutts:linePadding="1c" tts:lineHeight="100%" tts:wrapOption="noWrap"/>
            <style xml:id="darkGray" tts:fontSize="100%" tts:fontFamily="monospace" tts:color="#FFFFFF" tts:backgroundColor="#6D6D6D" ebutts:linePadding="1c" tts:lineHeight="100%" tts:wrapOption="noWrap"/>
            <style xml:id="padded" tts:fontSize="100%" tts:fontFamily="monospace" tts:color="#FFFFFF" ebutts:linePadding="1c" tts:lineHeight="100%" tts:textAlign="center"/>
            <style xml:id="red" tts:backgroundColor="#FF0000" ebutts:linePadding="1c"/>
        </styling>
        <layout>
            <region xml:id="r1" tts:origin="0% 70%" tts:extent="100% 20%" tts:overflow="visible"/>
            <region xml:id="r2" tts:origin="60% 0%" tts:extent="20% 20%" tts:showBackground="whenActive"/>
            <region xml:id="r3" tts:origin="60% 20%" tts:extent="20% 20%" tts:showBackground="whenActive"/>
            <region xml:id="r4" tts:origin="60% 40%" tts:extent="20% 20%"  tts:showBackground="whenActive"/>
            <region xml:id="r5" tts:origin="60% 60%" tts:extent="20% 20%" tts:showBackground="whenActive"/>
            <region xml:id="r6" tts:origin="60% 80%" tts:extent="20% 20%" tts:showBackground="whenActive"/>
        </layout>
    </head>
    <body>
        <div>
            <p xml:id="p1" begin="00:00:01.000" end="00:00:10.000" region="r1" style="padded">
                <span style="red">&#x200b;</span>
            </p>
            <p xml:id="p2" begin="00:00:11.000" end="00:00:20.000" region="r2" style="black">
                 R1 1 <br/>
                 R1 2 <br/>
                 R1 3
            </p>
            <p xml:id="p3" begin="00:00:11.000" end="00:00:20.000" region="r3" style="darkGray">
                 R2 4 <br/>
                 R2 5 <br/>
                 R2 6
            </p>
            <p xml:id="p4" begin="00:00:11.000" end="00:00:20.000" region="r4" style="black">
                 R3 7 <br/>
                 R3 8 <br/>
                 R3 9
            </p>
            <p xml:id="p5" begin="00:00:11.000" end="00:00:20.000" region="r5" style="darkGray">
                 R4 10 <br/>
                 R4 11 <br/>
                 R4 12
            </p>
            <p xml:id="p6" begin="00:00:11.000" end="00:00:20.000" region="r6" style="black">
                 R5 13 <br/>
                 R5 14 <br/>
                 R5 15
            </p>
        </div>
    </body>
</tt>
