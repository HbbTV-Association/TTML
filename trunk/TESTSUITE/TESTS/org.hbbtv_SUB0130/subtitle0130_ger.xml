<?xml version="1.0" encoding="UTF-8"?>
<tt
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:ebuttm="urn:ebu:tt:metadata"
    xmlns:tts="http://www.w3.org/ns/ttml#styling" ttp:timeBase="media" xml:lang="de">
    <head>
       <metadata>
           <ebuttm:documentMetadata>
               <ebuttm:conformsToStandard>urn:ebu:tt:distribution:2014-01</ebuttm:conformsToStandard>
               <ebuttm:conformsToStandard>http://www.w3.org/ns/ttml/profile/imsc1/text</ebuttm:conformsToStandard>
           </ebuttm:documentMetadata>
       </metadata>

    <styling>
            <style xml:id="spanStyle" tts:color="#FFFFFF"/>
            <style xml:id="paragraphStyle" tts:fontSize="100%" tts:backgroundColor="#000000"/>
        </styling>
        <layout>
            <region xml:id="bottom" tts:origin="10% 50%" tts:extent="80% 40%"/>
        </layout>
    </head>
    <body>
        <div>
            <p  begin="00:00:05.000" xml:id="p1" end="00:00:10.000" style="paragraphStyle" region="bottom">
                <span style="spanStyle">
                    Sie sind Rendering falsch Untertitel Komponente. 
                    <br />
                    (You are rendering wrong subtitle component.)            
                </span>
            </p>
        </div>
    </body>
</tt>